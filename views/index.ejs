<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Message Board</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Mini Message Board</h1>
    <a href="/form">Add a new message</a>

    <ul>
      <% messages.forEach((msg) => { %>
      <li>
        <strong><%= msg.user_name %></strong>: <%= msg.message %>
        <em>(<%= msg.timestamp %>)</em>
        <a href="/message/<%= msg.id %>">Open</a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
