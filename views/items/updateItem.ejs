<!DOCTYPE html>
<html>
<head>
  <title>Update Item</title>
</head>
<body>
  <h1>Update Item</h1>
  <form action="/items/update/<%= item.id %>" method="POST">
    <label for="name">Item Name:</label>
    <input type="text" id="name" name="name" value="<%= item.name %>" required>
    
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" step="0.01" value="<%= item.price %>" required>
    
    <label for="description">Description:</label>
    <textarea id="description" name="description"><%= item.description %></textarea>
    
    <label for="subcategory_id">Subcategory:</label>
    <select id="subcategory_id" name="subcategory_id" required>
      <% subcategories.forEach(subcategory => { %>
        <option value="<%= subcategory.id %>" <%= subcategory.id == item.subcategory_id ? 'selected' : '' %>><%= subcategory.name %></option>
      <% }) %>
    </select>
    
    <button type="submit">Update</button>
  </form>
</body>
</html>