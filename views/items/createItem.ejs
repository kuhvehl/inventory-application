<!DOCTYPE html>
<html>
<head>
  <title>Add Item</title>
  <link rel="stylesheet" href="/styles/reset.css" />
  <link rel="stylesheet" href="/styles/editItem.css" />
  <script src="/scripts/createItem.js" defer></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
  <header>
    <h1>Wine Inventory App</h1>
    <nav>
      <ul class="menu">
        <a href="/">Back to Items List</a>
      </ul>
    </nav>
  </header>
  <main>
    <section>
      <h2>Add Item</h2>
      <form action="/items/createItem" method="POST">
        <label>Name: <input type="text" name="name" value="<%= formValues.name %>" required /></label>
        <label>Price: <input type="number" step="0.01" name="price" value="<%= formValues.price %>" required /></label>
        <label>Quantity: <input type="number" name="quantity" value="<%= formValues.pricequantity %>" required /></label>
        <label>Description: <textarea name="description"><%= formValues.description %></textarea></label>
        <label>Brand: <input type="text" name="brand" value="<%= formValues.brand %>" required /></label>
        <label>Region: <input type="text" name="region" value="<%= formValues.region %>" required /></label>

        <label>Category:
          <select name="category_id" id="category-dropdown" required>
            <% categories.forEach(category => { %>
              <option value="<%= category.id %>" <%= category.id === selectedCategory.id ? 'selected' : '' %>>
                <%= category.name %>
              </option>
            <% }) %>
          </select>
        </label>
        
        <label>Subcategory:
          <select name="subcategory_id" id="subcategory-dropdown" required>
            <% subcategories.forEach(subcategory => { %>
              <option value="<%= subcategory.id %>" <%= subcategory.id === selectedSubcategory ? 'selected' : '' %>>
                <%= subcategory.name %>
              </option>
            <% }) %>
          </select>
        </label>

        <button type="submit">Add Item</button>
      </form>
    </section>
  </main>
</body>
</html>