<!DOCTYPE html>
<html>
  <head>
    <title>Create New Item</title>
    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/editItem.css" />
    <link rel="stylesheet" href="/createItem.css" />
    <script type="application/json" id="categories-data">
      <%- JSON.stringify(categories) %>
    </script>
    <script type="application/json" id="subcategories-data">
      <%- JSON.stringify(subcategories) %>
    </script>
    <script src="/createItem.js" defer></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <header>
      <h1>Wine Inventory App</h1>
    </header>
    <main>
      <section>
        <h2>Create New Item</h2>
        <form action="/items/createItem" method="POST">
          <label>Name: <input type="text" name="name" required /></label>
          <label
            >Price: <input type="number" step="0.01" name="price" required
          /></label>
          <label
            >Quantity: <input type="number" name="quantity" required
          /></label>
          <label>Description: <textarea name="description"></textarea></label>
          <label>Brand: <input type="text" name="brand" required /></label>
          <label>Region: <input type="text" name="region" required /></label>

          <!-- Category Dropdown -->
          <label
            >Category:
            <select name="category_id" required>
              <option value="">Select a category</option>
              <% categories.forEach(category => { %>
              <option value="<%= category.id %>"><%= category.name %></option>
              <% }) %>
            </select>
          </label>

          <!-- Subcategory Dropdown -->
          <label
            >Subcategory:
            <select name="subcategory_id" required>
              <option value="">Select a subcategory</option>
            </select>
          </label>

          <button type="submit">Create Item</button>
        </form>
        <a href="/">Back to Items List</a>
      </section>
    </main>
  </body>
</html>
