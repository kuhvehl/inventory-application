<!-- views/categoryItems.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= category.name %> Items</title>
    <link rel="stylesheet" href="/styles.css" />
    <!-- Link to your stylesheet -->
  </head>
  <body>
    <header>
      <h1><%= category.name %> Items</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/categories">Categories</a>
        <a href="/subcategories">Subcategories</a>
        <a href="/items">Items</a>
        <a href="/categories/<%= category.id %>/edit">Edit Category</a>
      </nav>
    </header>
    <main>
      <ul>
        <% items.forEach(item => { %>
        <li>
          <strong><%= item.name %></strong><br />
          Price: $<%= item.price %><br />
          Description: <%= item.description %>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
